---
export interface Props {
    key: string;
    title: string;
    img: string;
    date: string;
}

const { key, title, img, date } = Astro.props;
---

<article
    class="relative flex w-full grow cursor-pointer p-2 md:w-1/2 lg:w-1/3"
    style="height: 180px;"
>
    <a
        class="newswrap"
        href="/news/i/lekler-specheli-p-rva-startova-pozitsiia-i-za-sprinta-v-baku/267b3f1c632afa90dd714c9250982b6a"
    >
        <div class="flex items-center">
            <div class="flex items-center justify-center relative">
                <img
                    alt={title}
                    src={"/api/news/" + key + ".jpg"}
                    loading="lazy"
                    width={120}
                    height={180}
                /><img
                    src="data:image/gif;base64,R0lGODlhAQABAIAAAP///wAAACH5BAEAAAAALAAAAAABAAEAAAICRAEAOw=="
                    alt=""
                    width="120"
                    height="180"
                    class="bg-gradient-to-t from-gray-900 to-transparent pl-2 text-xs h-full absolute left-0"
                    style="width: 120px; height: 180px;"
                /><div
                    class="absolute flex items-end left-0 text-xs p-2"
                    style="width: 120px; height: 180px;"
                >
                    <time datetime={date} title={date}>преди 3 минути</time>
                </div><h3
                    class="px-2 font-bold text-slate-300 dark:text-gray-800"
                >
                    {title}
                </h3>
            </div>
        </div>
    </a>
</article>
