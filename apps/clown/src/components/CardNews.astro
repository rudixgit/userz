---
import { slugify } from "transliteration";
export interface Props {
    key: string;
    title: string;
    img: string;
    date: string;
}

const { key, title, date, image } = Astro.props;
---

<a
    class="cursor-point md:w-1/2 lg:w-1/3 overflow-hidden"
    style="height: 180px;"
    href={`/news/i/${slugify(title)}/${key}`}
>
    <div class="flex instructions">
        <div
            style="width:130px; height: 180px;"
            class="relative overflow-hidden"
        >
            <img
                alt={title}
                src={image}
                loading="lazy"
                height="100%"
                class="absolute top-0 left-0 w-full h-full object-cover"
            />
        </div>

        <div class="flex items-center justify-center w-full">
            <h3 class="px-2 font-bold text-slate-300 dark:text-gray-800">
                {title}
            </h3>
        </div>
    </div>
</a>
