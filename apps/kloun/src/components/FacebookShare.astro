---
export interface Props {
    url: string;
}

const { url } = Astro.props;
---

<button
    onclick={`fbshare('${url}')`}
    class="text-white transition duration-300 max-w-xs w-full rounded-3xl uppercase flex text-sm font-bold p-3 relative undefined false undefined"
    style="background-color:#1877F3"
>
    <div class="absolute h-full left-3 top-0 flex justify-center items-center">
        <svg
            class="h-6 w-6 fill-white drop-shadow-md"
            role="img"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
        >
            <path
                d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"
            >
            </path>
        </svg>
    </div>
    <div
        class="w-full ml-6 flex justify-center items-center pt-0.5 drop-shadow-md"
    >
        Сподели във Facebook
    </div>
</button>
