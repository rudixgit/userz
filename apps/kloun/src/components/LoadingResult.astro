---
const { name } = Astro.props;
---
 <div class="absolute">
  <p class="text-4xl md:text-5xl font-bold text-center bg-clip-text text-transparent bg-gradient-to-r from-rose-100 to-teal-100">
	{name}
  </p>
</div>
<div class="flex h-full w-full absolute justify-center items-center">
  <svg
	class="animate-spin   h-12 w-12 text-white"
	xmlns="http://w3.org/2000/svg"
	fill="none"
	viewBox="0 0 24 24"
  >
	<circle
	  class="opacity-25"
	  cx={12}
	  cy={12}
	  r={10}
	  stroke="currentColor"
	  stroke-width={4}
	/>
	<path
	  class="opacity-75"
	  fill="currentColor"
	  d="M4 12a8 8 0 0 1 8-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 0 1 4 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
	/>
  </svg>
  <span class="animate-ping  absolute inline-flex h-full w-full rounded-full   opacity-75 bg-black  " />
</div>

<svg
  class="w-full h-full  "
  width="640"
  height="336"
  viewBox="0 0 640 336"
  fill="none"
  xmlns="http://w3.org/2000/svg"
/>